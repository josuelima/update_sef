.container
  %div
    %h1 Selecione o arquivo
    %p.lead Selecione o arquivo SPED (Envie arquivos compactados .zip)        
    %form{:class => "form-inline", :method => "post", :action => "/corrigir-sped", :enctype => 'multipart/form-data'}
      %input{:type => "file", :class => "input-small", :name => "sef_arquivo"}
      %br
      %br
      %h1 Regras para subistituição
      %table{:class => "table table-bordered", :id => "regras-sped-1"}
        %thead
          %tr
            %th No Registro
            %th Se o Campo
            %th For
            %th A
            %th Substitua o Campo
            %th Por:
        %tbody
          %tr
            %td
              %input{:type => "text", :class => "input-small", :name => "registro[]"}
            %td
              %input{:type => "text", :class => "input-small", :name => "campo[]"}
            %td
              %select{:name => "regra[]", :class => "input-small"}
                %option{:value => "="} =
                %option{:value => "!="} !=
                %option{:value => "<"} <
                %option{:value => ">"} >
            %td
              %input{:type => "text", :class => "input-large", :name => "filtro[]"}
            %td
              %input{:type => "text", :class => "input-medium", :name => "campo_sub[]"}
            %td
              %input{:type => "text", :class => "input-large", :name => "substituir[]"}
      %a{:class => "btn btn-large btn-primary add-regra-sped", :href => "javascript:void(null);"}
        %i{:class => "icon-plus-sign icon-white"}
        = "&nbsp;Adicionar Regra"

      %br
      %br

      %table{:class => "table table-bordered", :id => "regras-sped-2"}
        %thead
          %tr
            %th Na Linha
            %th Substitua o Campo
            %th Por:
        %tbody
          %tr
            %td
              %input{:type => "text", :class => "input-small", :name => "linha[]"}
            %td
              %input{:type => "text", :class => "input-small", :name => "campo_rule_2[]"}
            %td
              %input{:type => "text", :class => "input-xxlarge", :name => "substituir_2[]"}
      
      %a{:class => "btn btn-large btn-primary add-regra2-sped", :href => "javascript:void(null);"}
        %i{:class => "icon-plus-sign icon-white"}
        = "&nbsp;Adicionar Regra"

      %br
      %br
      .form-actions
        %input{:type => "submit", :class => "btn btn-large btn-success", :value => "Corrigir Arquivo"}